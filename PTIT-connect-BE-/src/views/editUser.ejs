<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user's information</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3 mb-3">
                <h1>
                    Edit information for user with ID: <%= user.id %>
                </h1>
            </div>
            <form class="col-12" action="/put-crud?id=<%= user.id %>" method="POST">
                <div class="form-row">
                    <div class="form-group col-auto">
                        <label for="inputFirstName">First name</label>
                        <input type="text" class="form-control" id="inputFirstName" name="firstName"
                            value="<%= user.firstName %>" />
                    </div>
                    <div class="form-group col-auto">
                        <label for="inputLastName">Last name</label>
                        <input type="text" class="form-control" id="inputLastName" name="lastName"
                            value="<%= user.lastName %>" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-auto mb-6">
                        <label for="inputGender">Gender</label>
                        <select name="gender" class="form-control">
                            <selected value="<%= user.gender %>"></selected>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="form-group col-auto mb-6">
                        <label for="inputGender">Role</label>
                        <select name="role" class="form-control">
                            <selected value="<%= user.role%>"></selected>
                            <option value="0">Admin</option>
                            <option value="1">User</option>
                        </select>
                    </div>
                    <div class="form-group col-auto mb-6">
                        <div>
                            <label for="inputDob">Date of birth</label>
                        </div>

                        <input type="date" id="inputDob" name="dob" value="<%=user.dob%>" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-12">
                        <label for="inputImage">Image</label>
                    </div>
                    <div class="col-12 mb-6">
                        <input type="file" id="inputImage" name="image" accept=".jpg, .png">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</body>

</html>