<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD for PTIT-connect</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3 mb-3">
                <h1>Create a new user</h1>
            </div>
            <form class="col-12" action="/post-crud" method="POST">
                <div class="form-row">
                    <div class="form-group col-auto">
                        <label for="inputId">ID</label>
                        <input type="text" class="form-control" id="inputId" name="id">
                    </div>
                    <div class="col-auto">
                        <label for="inputProfileName">Profile name</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@</div>
                            </div>
                            <input type="text" class="form-control" id="inlineProfileName" name="profileName">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-auto">
                        <label for="inputFirstName">First name</label>
                        <input type="text" class="form-control" id="inputFirstName" name="firstName">
                    </div>
                    <div class="form-group col-auto">
                        <label for="inputLastName">Last name</label>
                        <input type="text" class="form-control" id="inputLastName" name="lastName">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-auto">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
                    </div>
                    <div class="form-group col-auto">
                        <label for="inputPassword4">Password</label>
                        <input type="password" class="form-control" id="inputPassword4" placeholder="Password"
                            name="password">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-auto mb-6">
                        <label for="inputGender">Gender</label>
                        <select name="gender" class="form-control">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="form-group col-auto mb-6">
                        <label for="inputGender">Role</label>
                        <select name="role" class="form-control">
                            <option value="0">Admin</option>
                            <option value="1">User</option>
                        </select>
                    </div>
                    <div class="form-group col-auto mb-6">
                        <div>
                            <label for="inputDob">Date of birth</label>
                        </div>

                        <input type="date" id="inputDob" name="dob" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-12">
                        <label for="inputImage">Image</label>
                    </div>
                    <div class="col-12 mb-6">
                        <input type="file" id="inputImage" name="image" accept=".jpg, .png">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</body>

</html>